{
  "name": "gemini-chatbot-advanced",
  "version": "2.0.0",
  "description": "Advanced AI Chatbot với Gemini 2.0 Flash - Real-time streaming, multimodal AI, và offline support",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build:css && npm run build:js",
    "build:css": "postcss styles.css -o public/styles.min.css --use autoprefixer cssnano",
    "build:js": "terser public/api-manager.js -o public/api-manager.min.js --compress --mangle",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint *.js --fix",
    "format": "prettier --write \"**/*.{js,json,css,md}\"",
    "deploy": "npm run build && npm start",
    "docker:build": "docker build -t gemini-chatbot .",
    "docker:run": "docker run -p 3000:3000 -e NODE_ENV=production gemini-chatbot"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "cookie-session": "^2.0.0",
    "multer": "1.4.5-lts.1",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "node-cache": "^5.1.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.2",
    "terser": "^5.26.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "engines": {
    "node": ">=18.0.0 <21.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "gemini",
    "chatbot",
    "ai",
    "javascript",
    "nodejs",
    "express",
    "streaming",
    "multimodal",
    "offline",
    "pwa"
  ],
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/gemini-chatbot-advanced.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/gemini-chatbot-advanced/issues"
  },
  "homepage": "https://github.com/yourusername/gemini-chatbot-advanced#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "pwa": {
    "name": "Gemini Chatbot Advanced",
    "short_name": "GeminiBot",
    "description": "Advanced AI Chatbot powered by Gemini 2.0 Flash",
    "theme_color": "#4285f4",
    "background_color": "#0c0c0c",
    "display": "standalone",
    "orientation": "portrait",
    "start_url": "/",
    "scope": "/",
    "icons": [
      {
        "src": "icons/icon-192x192.png",
        "sizes": "192x192",
        "type": "image/png"
      },
      {
        "src": "icons/icon-512x512.png",
        "sizes": "512x512",
        "type": "image/png"
      }
    ]
  }
}