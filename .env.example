# .env.example - Template cho file cấu hình môi trường

# ====================
# API Configuration
# ====================
GEMINI_API_KEY=AIzaSyDtovOnKqGNYdamLaVDlp3UYDSFfnD2fbk
MODEL=gemini-2.0-flash-exp

# ====================
# Security
# ====================
PERSONA_PASSWORD=12345
SESSION_SECRET=your_session_secret_key_change_in_production

# ====================
# Server Configuration  
# ====================
PORT=3000
NODE_ENV=development
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ====================
# File Upload Limits
# ====================
MAX_FILE_SIZE=10485760
MAX_IMAGE_SIZE=5242880
MAX_FILES_PER_REQUEST=10

# ====================
# Rate Limiting
# ====================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ====================
# Feature Flags
# ====================
ENABLE_STREAMING=true
ENABLE_OFFLINE_SUPPORT=true
ENABLE_FILE_UPLOAD=true
ENABLE_CHAT_HISTORY=true

# ====================
# AI Configuration
# ====================
AI_TEMPERATURE=0.7
AI_TOP_K=40
AI_TOP_P=0.95
AI_MAX_OUTPUT_TOKENS=8192
CONTEXT_LIMIT=32000

# ====================
# Cache Configuration
# ====================
CACHE_TTL=3600
MAX_CACHE_SIZE=100

# ====================
# Logging
# ====================
LOG_LEVEL=info
LOG_FILE=logs/app.log
ENABLE_REQUEST_LOGGING=true

# ====================
# Database (Optional - for production)
# ====================
# DATABASE_URL=mongodb://localhost:27017/gemini-chatbot
# REDIS_URL=redis://localhost:6379

# ====================
# External Services (Optional)
# ====================
# GOOGLE_CLOUD_PROJECT_ID=your_project_id
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# ====================
# Monitoring (Optional)
# ====================
# SENTRY_DSN=your_sentry_dsn_here
# GOOGLE_ANALYTICS_ID=your_ga_id_here
